@model List<Slider>
@{
    int Count = 0;
}
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-danger text-center">Sliders</h1>
 
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                <div>
                    <a class="btn btn-success px-5" asp-controller="Slider" asp-action="Create">Create</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slider item in Model)
                            {
                                    <tr>
                                        <td>@(++Count)</td>
                                        <td><img style="width:200px;" src="~/assets/imgs/slider/@item.ImageName" /></td>
                                        <td> @item.Title</td>
                                        <td>@item.Description</td>
                                          <td>
                                            <div class="container d-flex justify-content-around">
                                                    <a asp-controller="Slider" asp-action="Read" asp-route-id="@item.Id" ><button class="btn btn-info">Details</button></a>
                                                    <form asp-controller="Slider" asp-action="Update" asp-route-id="@item.Id" method="get">
                                                        <a><button class="btn btn-warning">Edit</button></a>
                                                    </form>
                                                    <form asp-controller="Slider" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                                           <a><button class="btn btn-danger">Delete</button></a>
                                                    </form>
                                            </div>
                                          </td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

</div>